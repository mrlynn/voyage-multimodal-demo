# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=multimodal_search

# Vector Search Index Name (optional - defaults to vector_index_voyageai)
VS_INDEX_NAME=vector_index_voyageai

# Voyage AI API Key
VOYAGE_API_KEY=your_voyage_api_key_here

# Google AI API Key (for Gemini)
GOOGLE_API_KEY=your_google_ai_api_key_here

# Vercel Blob Storage (required for production deployment)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Development Configuration
NODE_ENV=development
UPLOAD_DIR=./public/uploads

# File Upload Configuration
MAX_FILE_SIZE=4194304   # 4MB in bytes (Vercel hobby limit ~4.5MB)
MAX_PAGES_PER_PDF=50    # Limit pages to process for performance